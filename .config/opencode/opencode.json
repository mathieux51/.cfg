{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["~/.config/opencode/rules/tools.md"],
  "theme": "nord",
  "keybinds": {
    "leader": "esc",
    "session_interrupt": "ctrl+esc"
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git commit*": "ask",
      "git push*": "ask",
      "kubectl apply*": "ask",
      "kubectl patch*": "ask",
      "helm upgrade*": "ask",
      "terraform*": "ask",
      "tofu destroy*": "ask",
      "tofu apply*": "ask"
    }
  }
}
